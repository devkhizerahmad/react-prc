{
    "info": {
        "name": "Full System API Flow (User-Profile-Posts)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "description": "Comprehensive Postman collection testing the entire flow: Signup -> Profile Complete -> Post CRUD"
    },
    "item": [
        {
            "name": "01. Authentication",
            "item": [
                {
                    "name": "Register New User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.success) {",
                                    "    pm.environment.set('user_email', jsonData.data.user.email);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Flow Tester\",\n  \"email\": \"tester_{{$timestamp}}@example.com\",\n  \"password\": \"TestPass123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/signup",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "signup"
                            ]
                        }
                    }
                },
                {
                    "name": "Login User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.success) {",
                                    "    pm.environment.set('auth_token', jsonData.data.token);",
                                    "    pm.environment.set('my_user_id', jsonData.data.user.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"TestPass123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "02. Profile Management",
            "item": [
                {
                    "name": "Create Post (Incomplete Profile - Should Fail)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 400 or 500 depending on implementation\", function () {",
                                    "    pm.expect(pm.response.code).to.be.oneOf([400, 500]);",
                                    "});",
                                    "var jsonData = pm.response.json();",
                                    "pm.expect(jsonData.success).to.be.false;",
                                    "pm.expect(jsonData.message).to.include(\"complete your profile\");"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Post while incomplete\",\n  \"content\": \"This should fail.\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts"
                            ]
                        }
                    }
                },
                {
                    "name": "Complete Profile (Initial)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"bio\": \"Automated flow test bio.\",\n  \"avatar\": \"https://example.com/avatar.jpg\",\n  \"dateOfBirth\": \"1992-05-20\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/profile/complete",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "profile",
                                "complete"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Own Profile",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}"
                                }
                            ]
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/profile",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "profile"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "03. Post System",
            "item": [
                {
                    "name": "Create Post (After Profile Completion)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.success) {",
                                    "    pm.environment.set('last_post_id', jsonData.data.post.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Automated Post Title\",\n  \"content\": \"This is a post created via Postman automated collection flow.\",\n  \"img\": \"https://images.unsplash.com/photo-1498050108023-c5249f4df085\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Posts",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Post By ID",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/posts/{{last_post_id}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                "{{last_post_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Update My Post",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}"
                                }
                            ]
                        },
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Manually Updated Title\",\n  \"content\": \"Updating content to ensure CRUD is working perfectly.\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/posts/{{last_post_id}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                "{{last_post_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Get My Own Posts",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}"
                                }
                            ]
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/posts/my/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                "my",
                                "posts"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Post",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}"
                                }
                            ]
                        },
                        "method": "DELETE",
                        "url": {
                            "raw": "{{baseUrl}}/posts/{{last_post_id}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                "{{last_post_id}}"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api",
            "type": "string"
        }
    ]
}